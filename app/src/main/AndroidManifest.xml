<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotlin_social_media_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyHiltApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kotlin_social_media_app"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.bottomNav.product_details.ProductDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".view.bottomNav.post_details.PostDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".view.bottomNav.user_details.UserDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".view.auth.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".view.bottomNav.BottomNavActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.splash_screen.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>